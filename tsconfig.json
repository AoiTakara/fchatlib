{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "types": ["node", "jasmine"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "node_modules/**",
    "test/**",
    "dist"
  ],
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}